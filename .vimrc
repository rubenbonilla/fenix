syntax enable  " enable syntax highlighting
set number  " set line number 
set ts=4  " set tabs to have 4 spaces
set bg=dark  " set background to dark mode
set expandtab  " expand tabs into spaces
set autoindent  " indent when moving to the next line
set shiftwidth=4  " when using >> or << commands, shift lines by 4 spaces
set cursorline  " show visual line under cursor's current line
set showmatch  " show the matching of the pair for [] {} and ()

let python_highlight_all = 1  " enable all Python syntax highlighting features
